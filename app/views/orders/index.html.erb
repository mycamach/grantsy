<div class="container">
  <% if @orders.count > 0 %>
    <table class="table">
    <thead>
      <tr>
        <th>Plan</th>
        <th>Valor</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td> <%= order.subscription.plan_name %> </td>
          <td> <%= order.price %></td>
        </tr>
      <% end %>
      <tr class="table-dark">
      <td><strong>Total de la compra:</strong></td>
      <td><strong><%= @total %></strong></td>
      </tr>
    </tbody>
  </table>

  <%= link_to 'Limpiar carro', clean_orders_path, class: 'btn btn-outline-danger' %>
  <%= link_to 'Confirmar compra', pre_payment_billings_path, class: 'btn btn-success float-right' %>

  <% else %>
    <div class="d-flex p-2 bd-highlight">No tienes planes en tu carro de compra.</div>
  <% end %>
</div>
